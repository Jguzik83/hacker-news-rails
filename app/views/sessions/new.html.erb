<div id='log_sign'>
  <div class='bad_error'>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
  </div>
  <div id='log_in_form'>
    <h1>Log In</h1>

      <%= form_for @user, url: login_path, method: 'post' do |f| %>
        <div>
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
        <div>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div>
          <%= f.submit 'Log In' %>
        </div>
      <% end %>
  </div>

  <%= link_to 'Forgot Your Password?', root_path %>


  <div id='sign_up_form'>
    <h1>Create Account</h1>

    <div>
      <%= form_for @user, url: users_path, method: 'post' do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit 'Sign Up' %>
      <% end %>
    </div>
  </div>
</div>